@using Financeiro.Controllers.Auth
@model Financeiro.Models.Entidades.Terceiro
@{
    ViewBag.Title = "Novo Terceiro";
    Layout = "~/Views/Shared/_PartialLayout.cshtml";
}

<fieldset>
    <legend>Novo Terceiro</legend>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary("Preencha os campos obrigatórios (*)!")
        <div class="col-md-3 col-sm-3">
            <div class="form-group">
                <label for="Nome" class="control-label"><i class="fa fa-user-o"></i> Nome <span class="text-danger">*</span></label> @Html.ValidationMessageFor(t => t.Nome)
                @Html.TextBoxFor(t => t.Nome, new { @class = "form-control" })
            </div>
        </div>
        <div class="col-md-3 col-sm-3">
            <div class="form-group">
                <label for="Email" class="control-label"><i class="fa fa-envelope-o"></i> E-mail <span class="text-danger">*</span></label> @Html.ValidationMessageFor(t => t.Email)
                @Html.TextBoxFor(t => t.Email, new { @class = "form-control" })
            </div>
        </div>
        <div class="col-md-2 col-sm-2">
            <div class="form-group">
                <label for="Fone1" class="control-label"><i class="fa fa-phone"></i> Fone 1 <span class="text-danger">*</span></label>
                @Html.TextBoxFor(t => t.Fone1, new { @class = "form-control" })
            </div>
        </div>
        <div class="col-md-2 col-sm-2">
            <div class="form-group">
                <label for="Fone2" class="control-label"><i class="fa fa-phone"></i> Fone 2</label>
                @Html.TextBoxFor(t => t.Fone2, new { @class = "form-control" })
            </div>
        </div>
        <div class="col-md-3 col-sm-3">
            <div class="form-group">
                <label for="Descricao" class="control-label"><i class="fa fa-commenting"></i> Descrição</label>
                @Html.TextAreaFor(t => t.Descricao, new { @class = "form-control" })
            </div>
        </div>
        if (Authorizations.Is("Administrativo"))
        {
            <div class="col-md-2 col-sm-2">
                <div class="form-group">
                    <label for="DataCadastro" class="control-label"><i class="fa fa-calendar"></i> Data de Cadastro</label>
                    @Html.TextBoxFor(t => t.DataCadastro, new { type = "date", @class = "form-control" })
                </div>
            </div>
        }
        <hr class="col-md-12 col-sm-12" />
        <div class="col-md-2 col-sm-2">
            <div class="form-group">
                <label for="Vencimento" class="control-label"><i class="fa fa-calendar"></i> Vencimento</label>
                @Html.TextBoxFor(t => t.Vencimento, new { type = "date", @class = "form-control" })
            </div>
        </div>
        <div class="col-md-2 col-sm-2">
            <div class="form-group">
                <label for="strValorMensal" class="control-label"><i class="fa fa-money"></i> Valor Mensal</label>
                @Html.TextBoxFor(t => t.strValorMensal, new { placeholder = "0,00", @class = "form-control" })
            </div>
        </div>
        <div class="col-md-4 col-sm-4">
            <div class="form-group">
                <label for="TempoContrato" class="control-label"><i class="fa fa-clock-o"></i>Tempo de Contrato (em meses)</label>
                @Html.TextBoxFor(t => t.TempoContrato, new { type = "number", min = "0", placeholder = "0", @class = "form-control" })
            </div>
        </div>
        <hr class="col-md-12 col-sm-12" />
        <div class="col-md-12 col-sm-12 form-group text-center">
            <button type="submit" class="btn btn-default" onclick="$('ul').css('display','none')"><i class="fa fa-check"></i> Cadastrar</button>
        </div>
    }
</fieldset>
<script>
    $(document).ready(function () {
        $("#Fone1").mask("(99) 9999-9999?9").ready(function(event) {
            var target, phone, element;
            target = (event.currentTarget) ? event.currentTarget : event.srcElement;
            phone = target.value.replace('/\D/g', '');
            element = $(target);
            element.unmask();
            if(phone.length > 10) {
                element.mask("(99) 99999-9999");
            } else {
                element.mask("(99) 9999-9999?9");  
            }
        });
        $("#Fone2").mask("(99) 9999-9999?9").ready(function(event) {
            var target, phone, element;
            target = (event.currentTarget) ? event.currentTarget : event.srcElement;
            phone = target.value.replace('/\D/g', '');
            element = $(target);
            element.unmask();
            if(phone.length > 10) {
                element.mask("(99) 99999-9999");
            } else {
                element.mask("(99) 9999-9999?9");  
            }
        });
        //$("#Vencimento").mask("99/99/9999");

        $("#strValorMensal").keyup(function () {
            var er = /[^0-9.,]/;
            er.lastIndex = 0;
            var campo = this;
            if (er.test(campo.value)) {
                campo.value = "";
            }
        });
    });
</script>
@if (Authorizations.Is("Administrativo"))
{
    <script>
        $(document).ready(function () {
            //$("#DataCadastro").mask("99/99/9999");
            var date = new Date();
            var mm = (date.getMonth() + 1).toString();
            var dd = date.getDate().toString();
            dd = dd[1] ? dd : "0" + dd[0];
            mm = mm[1] ? mm : "0" + mm[0];
            $("#DataCadastro").val(date.getFullYear() + "-" + mm + "-" + dd);
        });
    </script>
}