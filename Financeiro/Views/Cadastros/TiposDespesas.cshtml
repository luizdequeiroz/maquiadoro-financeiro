@using Financeiro.Models.Enums
@model List<Financeiro.Models.Entidades.TipoDespesa>
@{
    ViewBag.Title = "Lista de Tipos de Despesas";
    Layout = "~/Views/Shared/_PartialLayout.cshtml";
}

<fieldset>
    <legend>Tipos de Despesas</legend>
    <form name="frm" id="frm" method="post" action="" role="form" target="principal">
        <input type="hidden" name="Id" id="Id" />
        <input type="hidden" name="Nome" id="Nome" />
        <input type="hidden" name="Descricao" id="Descricao" />
        <input type="hidden" name="Categoria" id="Categoria" />
        @Html.Raw(ViewBag.ModelError)
        @{ ViewBag.ModelError = ""; }
        <div class="table-responsive">
            <table class="table table-striped">
                <tbody>
                    <tr>
                        <td><label for="NewNome">Novo Tipo de Despesa: </label></td>
                        <td>
                            <input type="text" name="NewNome" id="NewNome" placeholder="nome do tipo de despesa" class="form-control valid" data-val="true" data-val-required="Digite o nome!" />
                            <span class="field-validation-valid" data-valmsg-for="NewNome" data-valmsg-replace="true"></span>
                        </td>
                        <td>
                            <input type="text" name="NewDescricao" id="NewDescricao" placeholder="descrição do tipo de despesa" class="form-control valid" data-val="true" data-val-required="Digite uma descrição!" />
                            <span class="field-validation-valid" data-valmsg-for="NewDescricao" data-valmsg-replace="true"></span>
                        </td>
                        <td>
                            <select name="NewCategoria" id="NewCategoria" class="form-control valid" data-val="true" data-val-required="Selecione a Categoria!">
                                <option value="1">Fornecedor</option>
                                <option value="2">Funcionário</option>
                                <option value="3">Terceiro</option>
                            </select>
                            <span class="field-validation-valid" data-valmsg-for="NewCategoria" data-valmsg-replace="true"></span>
                        </td>
                        <td colspan="2" align="right">
                            <input type="button" class="btn btn-primary btn-sm" onclick="cadastrar()" value="Cadastrar" />
                        </td>
                    </tr>
                </tbody>
            </table>
            <table class="table table-striped">
                @if (Model.Count > 0)
                {
                    <thead class="table-bordered">
                        <tr>
                            <td><strong>ID</strong></td>
                            <td><strong>NOME</strong></td>
                            <td><strong>DESCRIÇÃO</strong></td>
                            <td><strong>CATEGORIA</strong></td>
                            <td align="right"><strong>AÇÕES</strong></td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var c in Model)
                        {
                            <tr>
                                <th scope="row">@c.Id</th>
                                <td id="v1_@c.Id">@c.Nome</td>
                                <td id="e1_@c.Id" style="display: none"><input type="text" name="AltNome_@c.Id" id="AltNome_@c.Id" value="@c.Nome" class="valid" data-val="true" data-val-required="" /></td>
                                <td id="v2_@c.Id">@c.Descricao</td>
                                <td id="e2_@c.Id" style="display: none"><input type="text" name="AltDescricao_@c.Id" id="AltDescricao_@c.Id" value="@c.Descricao" class="valid" data-val="true" data-val-required="" /></td>
                                <td id="v3_@c.Id">@((ECategoria)c.Categoria)</td>
                                <td id="e3_@c.Id" style="display: none">
                                    <select name="AltCategoria_@c.Id" id="AltCategoria_@c.Id" class="form-control valid" data-val="true" data-val-required="">
                                        <option value="1" @((c.Categoria == 1) ? "selected" : "")>Fornecedor</option>
                                        <option value="2" @((c.Categoria == 2) ? "selected" : "")>Funcionário</option>
                                        <option value="3" @((c.Categoria == 3) ? "selected" : "")>Terceiro</option>
                                    </select>
                                </td>
                                <td align="right" id="vb_@c.Id">
                                    <div class="btn-group">
                                        <input type="button" class="btn btn-default btn-xs" onclick="alterar(@c.Id)" value="Alterar" />
                                        <a class="btn btn-danger btn-xs" data-toggle="modal" data-backdrop="false" data-target="#excluir_@c.Id">Excluir</a>
                                        <div class="modal fade" id="excluir_@c.Id" role="dialog" data-class="modal-draggable">
                                            <div class="modal-dialog modal-lg">
                                                <div class="modal-content">
                                                    <div class="modal-header text-left">
                                                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                                                        <h4 class="modal-title">Excluir Tipo de Despesa?</h4>
                                                    </div>
                                                    <div class="modal-body text-center">
                                                        <label class="control-label">Tem certeza de que deseja excluir o tipo de despesa?!</label>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <input type="reset" class="btn btn-danger" value="Não" data-dismiss="modal" />
                                                        <a class="btn btn-success" href="~/Cadastros/ExcluirTipoDespesa/@c.Id">Sim</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                                <td align="right" id="eb_@c.Id" style="display: none">
                                    <div class="btn-group">
                                        <input type="hidden" name="Id_@c.Id" id="Id_@c.Id" value="@c.Id" />
                                        <input type="button" class="btn btn-default btn-sm" onclick="submitAlt()" value="Alterar" />
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                }
                else
                {
                    <thead class="table-bordered">
                        <tr>
                            <td colspan="4"><strong>Não há tipos de despesas registrados!</strong></td>
                        </tr>
                    </thead>
                }
            </table>
        </div>
    </form>
</fieldset>