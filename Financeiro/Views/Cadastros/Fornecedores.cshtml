@using Financeiro.Controllers.Auth
@model List<Financeiro.Models.Entidades.Fornecedor>
@{
    ViewBag.Title = "Lista de fornecedores";
    Layout = "~/Views/Shared/_PartialLayout.cshtml";
}

<fieldset>
    <legend>Lista de Fornecedores</legend>
    <div class="table-responsive">
        @if (Authorizations.Is("Administrativo", "Compras"))
        {
            <table class="table table-striped">
                <tbody>
                    <tr>
                        <td colspan="5" align="right">
                            <a href="~/Cadastros/NovoFornecedor" target="principal" class="btn btn-default btn-sm"><i class="fa fa-plus-circle"></i> NOVO FORNECEDOR</a>
                        </td>
                    </tr>
                </tbody>
            </table>
        }
        <table class="table table-striped">
            @if (Model.Count > 0)
            {
            <thead class="table-bordered">
                <tr>
                    <!--<td><strong>ID</strong></td>-->
                    <td><strong>NOME FANTASIA</strong></td>
                    <td><strong>E-MAIL</strong></td>
                    <td><strong>FONE</strong></td>
                    <td><strong>DATA DE CADASTRO</strong></td>
                    <td align="right"><strong>AÇÕES</strong></td>
                </tr>
            </thead>
            <tbody>
                @foreach (var f in Model)
                {
                    <tr>
                        <!--<th scope="row">@f.Id</th>-->
                        <td>@f.NomeFantasia</td>
                        <td>@f.Email</td>
                        <td>@f.Fone1</td>
                        <td>@(f.DataCadastro?.Substring(0, 10))</td>

                        <td align="right">
                            <div class="btn-group">
                                <a href="~/Cadastros/VerFornecedor/@f.Id" target="principal" class="btn btn-default btn-xs"><i class="fa fa-eye"></i> Ver</a>
                                @if (Authorizations.Is("Administrativo"))
                                {
                                    <a href="~/Cadastros/AlterarFornecedor/@f.Id" target="principal" class="btn btn-default btn-xs"><i class="fa fa-pencil-square-o"></i> Alterar</a>
                                    <a class="btn btn-default btn-xs" data-toggle="modal" data-backdrop="false" data-target="#excluir_@f.Id"><i class="fa fa-minus-circle"></i> Excluir</a>
                                    <div class="modal fade" id="excluir_@f.Id" role="dialog" data-class="modal-draggable">
                                        <div class="modal-dialog modal-lg">
                                            <div class="modal-content">
                                                <div class="modal-header text-left">
                                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                                    <h4 class="modal-title">Excluir fornecedor @f.NomeFantasia?</h4>
                                                </div>
                                                <div class="modal-body text-center">
                                                    <label class="control-label">Tem certeza de que deseja excluir o fornecedor?!</label>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="reset" class="btn btn-default" data-dismiss="modal">Não</button>
                                                    <a class="btn btn-default" href="~/Cadastros/ExcluirFornecedor/@f.Id">Sim</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </td>
                    </tr>
                    <tr class="background-whitesmoke">
                        <td><strong>DESCRIÇÃO: </strong></td><td colspan="4">@f.Descricao</td>
                    </tr>
                }
            </tbody>
            }
            else
            {
                <thead class="table-bordered">
                    <tr>
                        <td><strong>Não há fornecedores registrados!</strong></td>
                    </tr>
                </thead>
            }
        </table>
        @if (Authorizations.Is("Administrativo", "Compras"))
        {
            <table class="table table-striped">
                <tbody>
                    <tr>
                        <td colspan="5" align="right">
                            <a href="~/Cadastros/NovoFornecedor" target="principal" class="btn btn-default btn-sm"><i class="fa fa-plus-circle"></i> NOVO FORNECEDOR</a>
                        </td>
                    </tr>
                </tbody>
            </table>
        }
    </div>
</fieldset>