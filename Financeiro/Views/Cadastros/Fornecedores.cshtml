@model List<Financeiro.Models.Entidades.Destinatario>
@{
    ViewBag.Title = "Lista de fornecedores";
    Layout = "~/Views/Shared/_PartialLayout.cshtml";
}

<fieldset>
    <legend>Lista de Fornecedores</legend>
    <div class="table-responsive">
        @if ((int)Session["nivel"] != (int)Financeiro.Models.Enums.ENivel.Consulta)
        {
            <table class="table table-striped">
                <tbody>
                    <tr>
                        <td colspan="5" align="right">
                            <a href="~/Cadastros/NovoFornecedor" target="principal" class="btn btn-primary btn-sm">NOVO FORNECEDOR</a>
                        </td>
                    </tr>
                </tbody>
            </table>
        }
        <table class="table table-striped">
            @if (Model.Count > 0)
            {
            <thead class="table-bordered">
                <tr>
                    <td><strong>ID</strong></td>
                    <td><strong>NOME FANTASIA</strong></td>
                    <td><strong>DESCRIÇÃO DO FORNECEDOR</strong></td>
                    <td><strong>DATA DE CADASTRO</strong></td>
                    <td align="right"><strong>AÇÕES</strong></td>
                </tr>
            </thead>
            <tbody>
                @foreach (var f in Model)
                {
                    <tr>
                        <th scope="row">@f.Id</th>
                        <td>@f.NomeFantasia</td>
                        <td>@f.Descricao</td>
                        <td>@f.DataCadastro</td>

                        <td align="right">
                            <div class="btn-group">
                                <a href="~/Cadastros/VerFornecedor/@f.Id" target="principal" class="btn btn-success btn-xs">Ver</a>
                                @if ((int)Session["nivel"] != (int)Financeiro.Models.Enums.ENivel.Consulta)
                                {
                                    <a href="~/Cadastros/AlterarFornecedor/@f.Id" target="principal" class="btn btn-default btn-xs">Alterar</a>
                                    <a class="btn btn-danger btn-xs" data-toggle="modal" data-backdrop="false" data-target="#excluir_@f.Id">Excluir</a>
                                    <div class="modal fade" id="excluir_@f.Id" role="dialog" data-class="modal-draggable">
                                        <div class="modal-dialog modal-lg">
                                            <div class="modal-content">
                                                <div class="modal-header text-left">
                                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                                    <h4 class="modal-title">Excluir fornecedor @f.NomeFantasia?</h4>
                                                </div>
                                                <div class="modal-body text-center">
                                                    <label class="control-label">Tem certeza de que deseja excluir o fornecedor?!</label>
                                                </div>
                                                <div class="modal-footer">
                                                    <input type="reset" class="btn btn-danger" value="Não" data-dismiss="modal" />
                                                    <a class="btn btn-success" href="~/Cadastros/ExcluirFornecedor/@f.Id">Sim</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
            }
            else
            {
                <thead class="table-bordered">
                    <tr>
                        <td colspan="5"><strong>Não há fornecedores registrados!</strong></td>
                    </tr>
                </thead>
            }
        </table>
        @if ((int)Session["nivel"] != (int)Financeiro.Models.Enums.ENivel.Consulta)
        {
            <table class="table table-striped">
                <tbody>
                    <tr>
                        <td colspan="5" align="right">
                            <a href="~/Cadastros/NovoFornecedor" target="principal" class="btn btn-primary btn-sm">NOVO FORNECEDOR</a>
                        </td>
                    </tr>
                </tbody>
            </table>
        }
    </div>
</fieldset>