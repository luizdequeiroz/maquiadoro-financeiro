@model List<Financeiro.Models.Entidades.Autorizacao>
@{
    ViewBag.Title = "Início";
}
<nav class="navbar navbar-default navbar-fixed-top">
    <div class="col-md-11"></div>
    <div class="text-right col-md-1 padding-10">
        @Html.ActionLink("Sair", "Sair", null, new { @class = "btn btn-danger btn-xs" })
    </div>
</nav>
<div class="col-md-12 col-sm-12 background-white no-padding-horizontal">
    <div id="backmenu"></div>
    <div class="col-md-2 col-sm-2 no-padding-horizontal">
        <ul class="nav nav-tabs tabs-left background-whitesmoke no-padding-horizontal" id="tabmenu">
            @foreach (var a in Model)
            {
                var menu = a.Menu;
                <li class="button @menu.Class">
                    <a href="#@menu.Href" data-controller="@menu.Controller" id="@menu.IdHtml" target="@menu.Target" data-toggle="tab" onclick="abrir(this.id)">
                        @Html.Raw(menu.Texto)
                    </a>
                </li>
            }
        </ul>
    </div>
    <div class="col-xs-9">
        <div class="tab-content">
            @foreach (var a in Model)
            {
                var menu = a.Menu;
                <fieldset class="tab-pane@((menu.Class == "active")?" active":"")" id="@menu.Href">
                    <legend>
                        @if (menu.Class != "submenu")
                        {
                            @Html.Raw(menu.Texto)
                        }
                    </legend>
                </fieldset>
            }
            <iframe src="~/Desktop/Inicio" id="principal" name="principal" frameborder="0" scrolling="no" onload="resizeIframe(this)"></iframe>
        </div>
    </div>
    <div class="clearfix"></div>
</div>