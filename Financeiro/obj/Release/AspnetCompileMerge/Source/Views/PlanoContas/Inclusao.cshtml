@using Financeiro.Controllers.Auth
@{
    ViewBag.Title = "Inclusão";
    Layout = "~/Views/Shared/_PartialLayout.cshtml";
}

<div class="btn-group btn-group-justified btn-group-lg btn-group-box">
    @if (Authorizations.Is("Administrativo", "Compras"))
    {
        <a class="btn btn-default btn-lg btn-box" href="~/PlanoContas/InclusaoFornecedor"><i class="fa fa-truck fa-2x"></i><br />Fornecedores</a>
    }
    <a class="btn btn-default btn-lg btn-box" href="~/PlanoContas/InclusaoFuncionario"><i class="fa fa-users fa-2x"></i><br />Funcionários</a>
    <a class="btn btn-default btn-lg btn-box" href="~/PlanoContas/InclusaoTerceiro"><i class="fa fa-user-circle-o fa-2x"></i><br />Terceiros</a>
</div>
