@model Financeiro.Models.Entidades.Funcionario
@{
    ViewBag.Title = "Entrada";
    Layout = "~/Views/Shared/_NeutralLayout.cshtml";
}
@Html.Raw(ViewBag.ScriptSession)
<div class="panel panel-default centered">
    <fieldset>
        <legend><i class="fa fa-sign-in"></i> Entrada</legend>
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true)
            <div class="form-group">
                <label for="Usuario" class="control-label"><i class="fa fa-user-circle"></i> Usuário</label>
                @Html.ValidationMessageFor(f => f.Usuario)
                @Html.TextBoxFor(u => u.Usuario, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label for="Senha" class="control-label"><i class="fa fa-unlock-alt"></i> Senha</label>
                @Html.ValidationMessageFor(u => u.Senha)
                @Html.TextBoxFor(u => u.Senha, new { type = "password", @class = "form-control" })
            </div>
            <hr />
            <input type="submit" class="btn btn-success btn-block" value="Entrar" />
        }
    </fieldset>
</div>