@model List<Financeiro.Models.Entidades.Usuario>
@{
    ViewBag.Title = "Lista de usuários";
    Layout = "~/Views/Shared/_PartialLayout.cshtml";
}

<fieldset>
    <legend>Lista de Usuários</legend>
    <div class="table-responsive">
        <table class="table table-striped">
            <tbody>
                <tr>
                    <td colspan="5" align="right">
                        <a href="~/Administrativo/NovoUsuario" target="principal" class="btn btn-primary btn-sm">NOVO USUÁRIO</a>
                    </td>
                </tr>
            </tbody>
        </table>
        <table class="table table-striped">
            <thead class="table-bordered">
                <tr>
                    <td><strong>ID</strong></td>
                    <td><strong>NOME</strong></td>
                    <td><strong>APELIDO</strong></td>
                    <td><strong>DATA DE CADASTRO</strong></td>
                    <td><strong>NÍVEL DE ACESSO</strong></td>
                    <td align="right"><strong>AÇÕES</strong></td>
                </tr>
            </thead>
            <tbody>
                @foreach (var u in Model)
                {
                    <tr>
                        <th scope="row">@u.Id</th>
                        <td>@u.Nome</td>
                        <td>@u.Apelido</td>
                        <td>@u.DataCadastro</td>
                        <td>@u.ENivel</td>
                        <td align="right">
                            <div class="btn-group">
                                <a href="~/Administrativo/AlterarUsuario/@u.Id" target="principal" class="btn btn-default btn-xs">Alterar</a>
                                @if (u.Id != (int)Session["id"])
                                {
                                    <a class="btn btn-danger btn-xs" data-toggle="modal" data-backdrop="false" data-target="#excluir_@u.Id">Excluir</a>
                                    <div class="modal fade" id="excluir_@u.Id" role="dialog" data-class="modal-draggable">
                                        <div class="modal-dialog modal-lg">
                                            <div class="modal-content">
                                                <div class="modal-header text-left">
                                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                                    <h4 class="modal-title">Excluir usuário @u.Apelido?</h4>
                                                </div>
                                                <div class="modal-body text-center">
                                                    <label class="control-label">Tem certeza de que deseja excluir o usuário?!</label>
                                                </div>
                                                <div class="modal-footer">
                                                    <input type="reset" class="btn btn-danger" value="Não" data-dismiss="modal" />
                                                    <a class="btn btn-success" href="~/Administrativo/ExcluirUsuario/@u.Id">Sim</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <table class="table table-striped">
            <tbody>
                <tr>
                    <td colspan="5" align="right">
                        <a href="~/Administrativo/NovoUsuario" target="principal" class="btn btn-primary btn-sm">NOVO USUÁRIO</a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</fieldset>