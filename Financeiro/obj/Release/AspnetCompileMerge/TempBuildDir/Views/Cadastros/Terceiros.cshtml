@using Financeiro.Controllers.Auth
@model List<Financeiro.Models.Entidades.Terceiro>
@{
    ViewBag.Title = "Lista de terceiros";
    Layout = "~/Views/Shared/_PartialLayout.cshtml";
}

<fieldset>
    <legend>Lista de Terceiros</legend>
    <div class="table-responsive">
        @if (Authorizations.Is("Administrativo", "Financeiro"))
        {
            <table class="table table-striped">
                <tbody>
                    <tr>
                        <td colspan="5" align="right">
                            <a href="~/Cadastros/NovoTerceiro" target="principal" class="btn btn-default btn-sm"><i class="fa fa-plus-circle"></i> NOVO TERCEIRO</a>
                        </td>
                    </tr>
                </tbody>
            </table>
        }
        <table class="table table-striped">
            @if (Model.Count > 0)
            {
                <thead class="table-bordered">
                    <tr>
                        <!--<td><strong>ID</strong></td>-->
                        <td><strong>NOME</strong></td>
                        <td><strong>E-MAIL</strong></td>
                        <td><strong>FONE</strong></td>
                        <td><strong>TEMPO DE CONTRATO</strong></td>
                        <td align="right"><strong>AÇÕES</strong></td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var t in Model)
                    {
                        <tr>
                            <!--<th scope="row">@t.Id</th>-->
                            <td>@t.Nome</td>
                            <td>@t.Email</td>
                            <td>@t.Fone1</td>
                            <td>@t.TempoContrato @((int.Parse(string.IsNullOrEmpty(t.TempoContrato) ? "0" : t.TempoContrato) == 1) ? " mês." : " meses.")</td>

                            <td align="right">
                                <div class="btn-group">
                                    <a href="~/Cadastros/VerTerceiro/@t.Id" target="principal" class="btn btn-default btn-xs"><i class="fa fa-eye"></i> Ver</a>
                                    @if (Authorizations.Is("Administrativo", "Financeiro"))
                                    {
                                        <a href="~/Cadastros/AlterarTerceiro/@t.Id" target="principal" class="btn btn-default btn-xs"><i class="fa fa-pencil-square-o"></i> Alterar</a>
                                        <a class="btn btn-default btn-xs" data-toggle="modal" data-backdrop="false" data-target="#excluir_@t.Id"><i class="fa fa-minus-circle"></i> Excluir</a>
                                        <div class="modal fade" id="excluir_@t.Id" role="dialog" data-class="modal-draggable">
                                            <div class="modal-dialog modal-lg">
                                                <div class="modal-content">
                                                    <div class="modal-header text-left">
                                                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                                                        <h4 class="modal-title">Excluir terceiro @t.Nome?</h4>
                                                    </div>
                                                    <div class="modal-body text-center">
                                                        <label class="control-label">Tem certeza de que deseja excluir o terceiro?!</label>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="reset" class="btn btn-default" data-dismiss="modal">Não</button>
                                                        <a class="btn btn-default" href="~/Cadastros/ExcluirTerceiro/@t.Id">Sim</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </td>
                        </tr>
                        <tr class="background-whitesmoke">
                            <td><strong>DESCRIÇÃO: </strong></td>
                            <td colspan="4">@t.Descricao</td>
                        </tr>
                    }
                </tbody>
            }
            else
            {
                <thead class="table-bordered">
                    <tr>
                        <td colspan="6"><strong>Não há terceiros registrados!</strong></td>
                    </tr>
                </thead>
            }
        </table>
        @if (Authorizations.Is("Administrativo", "Financeiro"))
        {
            <table class="table table-striped">
                <tbody>
                    <tr>
                        <td colspan="5" align="right">
                            <a href="~/Cadastros/NovoTerceiro" target="principal" class="btn btn-default btn-sm"><i class="fa fa-plus-circle"></i> NOVO TERCEIRO</a>
                        </td>
                    </tr>
                </tbody>
            </table>
        }
    </div>
</fieldset>