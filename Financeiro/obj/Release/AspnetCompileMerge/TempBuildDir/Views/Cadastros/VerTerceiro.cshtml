@using Financeiro.Controllers.Auth
@using Financeiro.Models.Enums
@model Financeiro.Models.Entidades.Terceiro
@{
    ViewBag.Title = "Ficha de Terceiro";
    Layout = "~/Views/Shared/_PartialLayout.cshtml";
}

<fieldset>
    <legend>Ficha do Terceiro - @Model.Nome</legend>
    <div class="col-md-8 col-sm-8">
        <div class="col-md-7 col-sm-7">
            <div class="form-group">
                <label for="NomeCompleto" class="control-label">Nome Completo: </label>
                @Model.Nome
            </div>
        </div>
        <div class="col-md-4 col-sm-4">
            <div class="form-group">
                <label for="Email" class="control-label">E-mail: </label>
                @Model.Email
            </div>
        </div>
        <div class="col-md-4 col-sm-4">
            <div class="form-group">
                <label for="Fone1" class="control-label">Fone 1: </label>
                @Model.Fone1
            </div>
        </div>
        <div class="col-md-4 col-sm-4">
            <div class="form-group">
                <label for="Fone2" class="control-label">Fone 2: </label>
                @(string.IsNullOrEmpty(Model.Fone2) ? "[Não informado]" : Model.Fone2)
            </div>
        </div>
        <div class="col-md-8 col-sm-8">
            <div class="form-group">
                <label for="Descricao" class="control-label">Descrição: </label>
                @(string.IsNullOrEmpty(Model.Descricao) ? "[Não informado]" : Model.Descricao)
            </div>
        </div>
        <div class="col-md-4 col-sm-4">
            <div class="form-group" title="@Model.DataCadastro">
                <label for="DataCadastro" class="control-label">Data de Cadastro: </label>
                @(string.IsNullOrEmpty(Model.DataCadastro) ? "[Não informado]" : Model.DataCadastro.Substring(0, 10))
            </div>
        </div>
        <hr class="col-md-12 col-sm-12" />
        <div class="col-md-4 col-sm-4">
            <div class="form-group">
                <label for="Vencimento" class="control-label">Vencimento: </label>
                @(string.IsNullOrEmpty(Model.Vencimento) ? "[Não informado]" : Model.Vencimento.Substring(0, 10))
            </div>
        </div>
        <div class="col-md-3 col-sm-3">
            <div class="form-group">
                <label for="ValorMensal" class="control-label">Valor Mensal: </label>
                @(string.IsNullOrEmpty(Model.strValorMensal) ? "[Não informado]" : decimal.Parse(Model.strValorMensal).ToString("C") )
            </div>
        </div>
        <div class="col-md-4 col-sm-4">
            <div class="form-group">
                <label for="TempoContrato" class="control-label">Tempo de Contrato: </label>
                @(string.IsNullOrEmpty(Model.TempoContrato) ? "[Não informado]" : Model.TempoContrato)
            </div>
        </div>
        <div class="col-md-12 col-sm-12 text-center">
            @if (Authorizations.Is("Administrativo"))
            {
                <a href="~/Cadastros/AlterarTerceiro/@Model.Id" class="btn btn-default">Alterar</a>
                <a class="btn btn-default" data-toggle="modal" data-backdrop="false" data-target="#excluir_@Model.Id">Excluir</a>
                <div class="modal fade" id="excluir_@Model.Id" role="dialog" data-class="modal-draggable">
                    <div class="modal-dialog modal-lg">
                        <div class="modal-content">
                            <div class="modal-header text-left">
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                <h4 class="modal-title">Excluir terceiro @Model.Nome?</h4>
                            </div>
                            <div class="modal-body text-center">
                                <label class="control-label">Tem certeza de que deseja excluir o terceiro?!</label>
                            </div>
                            <div class="modal-footer">
                                <button type="reset" class="btn btn-default" data-dismiss="modal">Não</button>
                                <a class="btn btn-default" href="~/Cadastros/ExcluirTerceiro/@Model.Id">Sim</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="col-md-4 col-sm-4">
        <div class="table-responsive">
            <table class="table table-striped">
                <thead class="table-bordered">
                    <tr>
                        @{ var contasBancarias = Model.ContasBancarias; }
                        @if (contasBancarias.Count > 0)
                        {
                            <td><strong>BANCO</strong></td>
                            <td><strong>AGÊNCIA</strong></td>
                            <td><strong>CONTA</strong></td>
                        }
                        <td align="right" @((contasBancarias.Count == 0) ? "colspan=4" : "")>
                            @if (Authorizations.Is("Administrativo", "Financeiro"))
                            {
                                <a data-toggle="modal" data-backdrop="false" data-target="#novaconta" class="btn btn-default btn-xs">NOVA</a>
                            }
                        </td>
                    </tr>
                </thead>
                @if (contasBancarias.Count > 0)
                {
                    <tbody>
                        @foreach (var cb in contasBancarias)
                        {
                            <tr>
                                <td>@cb.NomeBanco</td>
                                <td scope="row">@cb.Agencia</td>
                                <td scope="row">@cb.Conta</td>
                                <td align="right">
                                    @{ var excluir = ""; }
                                    @if (Authorizations.Is("Administrativo"))
                                    {
                                        excluir = "<a class='btn btn-default btn-xs btn-block' data-toggle='modal' data-backdrop='false' data-target='#excluir_" + cb.Id + "'>Excluir</a>";
                                        <div class="modal fade" id="excluir_@cb.Id" role="dialog" data-class="modal-draggable">
                                            <div class="modal-dialog modal-lg">
                                                <div class="modal-content">
                                                    <div class="modal-header text-left">
                                                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                                                        <h4 class="modal-title">Excluir Conta Bancária de @Model.Nome?</h4>
                                                    </div>
                                                    <div class="modal-body text-center">
                                                        <label class="control-label">Tem certeza de que deseja excluir a conta bancária desta pessoa?!</label>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="reset" class="btn btn-default" data-dismiss="modal">Não</button>
                                                        <a class="btn btn-default" href="/Cadastros/ExcluirContaBancaria/@cb.Id">Sim</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                    <a class="btn btn-default btn-xs" data-toggle="popover" data-placement="left" title="@cb.NomeTitular" data-content="<b>Banco:</b> @cb.NomeBanco<br/><b>Agência:</b> @cb.Agencia<br/><b>Conta:</b> @cb.Conta<br/><b>Op:</b> @cb.Op<br/>@excluir" data-html="true">Ver</a>
                                </td>
                            </tr>
                                        }
                    </tbody>
                                        }
                                        else
                                        {
                                            <thead class="table-bordered">
                                                <tr>
                                                    <td colspan="4"><strong>Não há contas bancárias!</strong></td>
                                                </tr>
                                            </thead>
                                        }
            </table>
        </div>
        @if (Authorizations.Is("Administrativo", "Financeiro"))
        {
            <div class="modal fade" id="novaconta" role="dialog" data-class="modal-draggable">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title">Nova Conta Bancária p/ @Model.Nome</h4>
                        </div>
                        <div class="modal-body">
                            @Html.Action("NovaContaBancaria", new { favorecidoId = Model.Id, categoria = (int)ECategoria.Terceiro })
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</fieldset>
