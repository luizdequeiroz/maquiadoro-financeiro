@model Financeiro.Models.Entidades.Destinatario
@{
    ViewBag.Title = "Ficha de Fornecedor";
    Layout = "~/Views/Shared/_PartialLayout.cshtml";
}

<fieldset>
    <legend>Ficha do Terceiro - @Model.ApelidoFantasia</legend>
    @if (Model.ETipoPessoa == Financeiro.Models.Enums.ETipoPessoa.Juridica)
    {
        <div class="col-md-8">
            <table class="table">
                <tr>
                    <td align="right"><strong>Nome Fantasia: </strong></td>
                    <td align="left">
                        @Html.ValueFor(t => t.NomeFantasia)
                    </td>
                    <td align="right"><strong>Razão Social: </strong></td>
                    <td align="left">
                        @Html.ValueFor(t => t.RazaoSocial)
                    </td>
                    <td align="right"><strong>CNPJ: </strong></td>
                    <td align="left">
                        @Html.ValueFor(t => t.CNPJ)
                    </td>
                </tr>
                <tr>
                    <td align="right"><strong>Descrição: </strong></td>
                    <td align="left" colspan="5">
                        @Html.ValueFor(t => t.Descricao)
                    </td>
                </tr>
                <tr>
                    <td align="right"><strong>Data de Cadastro: </strong></td>
                    <td align="left" colspan="3">
                        @Html.ValueFor(t => t.DataCadastro)
                    </td>
                    <td align="right"><strong>E-mail: </strong></td>
                    <td align="left">
                        @Html.ValueFor(t => t.Email)
                    </td>
                </tr>
                <tr>
                    <td align="right"><strong>Telefone: </strong></td>
                    <td align="left">
                        @Html.ValueFor(t => t.TelefoneFornecedor)
                    </td>
                    @if (Model.Celular != "0000000000")
                    {
                        <td align="right"><strong>Celular: </strong></td>
                        <td align="left">
                            @Html.ValueFor(t => t.Celular)
                        </td>
                    }
                </tr>
                <tr>
                    @if ((int)Session["nivel"] != (int)Financeiro.Models.Enums.ENivel.Consulta)
                    {
                        <td align="right" colspan="3"><a href="~/Cadastros/AlterarTerceiro/@Model.Id" class="btn btn-default">Alterar</a></td>
                        <td colspan="3">
                            <a class="btn btn-danger" data-toggle="modal" data-backdrop="false" data-target="#excluir_@Model.Id">Excluir</a>
                            <div class="modal fade" id="excluir_@Model.Id" role="dialog" data-class="modal-draggable">
                                <div class="modal-dialog modal-lg">
                                    <div class="modal-content">
                                        <div class="modal-header text-left">
                                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                                            <h4 class="modal-title">Excluir terceiro @Model.ApelidoFantasia?</h4>
                                        </div>
                                        <div class="modal-body text-center">
                                            <label class="control-label">Tem certeza de que deseja excluir o terceiro?!</label>
                                        </div>
                                        <div class="modal-footer">
                                            <input type="reset" class="btn btn-danger" value="Não" data-dismiss="modal" />
                                            <a class="btn btn-success" href="~/Cadastros/ExcluirTerceiro/@Model.Id">Sim</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </td>
                    }
                </tr>
            </table>
        </div>
    }
    else
    {
        <div class="col-md-8">
            <table class="table">
                <tr>
                    <td align="right"><strong>Apelido: </strong></td>
                    <td align="left">
                        @Html.ValueFor(t => t.Apelido)
                    </td>
                    <td align="right"><strong>Nome: </strong></td>
                    <td align="left">
                        @Html.ValueFor(t => t.Nome)
                    </td>
                    <td align="right"><strong>CPF: </strong></td>
                    <td align="left">
                        @Html.ValueFor(t => t.CPF)
                    </td>
                </tr>
                <tr>
                    <td align="right"><strong>Descrição: </strong></td>
                    <td align="left" colspan="5">
                        @Html.ValueFor(t => t.Descricao)
                    </td>
                </tr>
                <tr>
                    <td align="right"><strong>Data de Cadastro: </strong></td>
                    <td align="left" colspan="2">
                        @Html.ValueFor(t => t.DataCadastro)
                    </td>
                    <td align="right"><strong>E-mail: </strong></td>
                    <td align="left" colspan="2">
                        @Html.ValueFor(t => t.Email)
                    </td>
                </tr>
                <tr>
                    @if (Model.Telefone != "0000000000")
                {
                        <td align="right"><strong>Telefone: </strong></td>
                        <td align="left">
                            @Html.ValueFor(t => t.Telefone)
                        </td>
                    }
                    <td align="right"><strong>Celular: </strong></td>
                    <td align="left">
                        @Html.ValueFor(t => t.CelularFuncionario)
                    </td>
                </tr>
                <tr>
                    @if ((int)Session["nivel"] != (int)Financeiro.Models.Enums.ENivel.Consulta)
                    {
                        <td align="right" colspan="3"><a href="~/Cadastros/AlterarTerceiro/@Model.Id" class="btn btn-default">Alterar</a></td>
                        <td colspan="3">
                            <a class="btn btn-danger" data-toggle="modal" data-backdrop="false" data-target="#excluir_@Model.Id">Excluir</a>
                            <div class="modal fade" id="excluir_@Model.Id" role="dialog" data-class="modal-draggable">
                                <div class="modal-dialog modal-lg">
                                    <div class="modal-content">
                                        <div class="modal-header text-left">
                                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                                            <h4 class="modal-title">Excluir terceiro @Model.ApelidoFantasia?</h4>
                                        </div>
                                        <div class="modal-body text-center">
                                            <label class="control-label">Tem certeza de que deseja excluir o terceiro?!</label>
                                        </div>
                                        <div class="modal-footer">
                                            <input type="reset" class="btn btn-danger" value="Não" data-dismiss="modal" />
                                            <a class="btn btn-success" href="~/Cadastros/ExcluirTerceiro/@Model.Id">Sim</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </td>
                    }
                </tr>
            </table>
        </div>
    }
    <div class="col-md-4">
        @Html.Action("ContasBancarias", new { destinatarioId = Model.Id })
    </div>
</fieldset>
